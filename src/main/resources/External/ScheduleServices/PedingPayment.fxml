<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane fx:id="mainContent" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.jala.university.presentation.controller.External.PedingPaymentController"
      prefHeight="400.0" prefWidth="600.0"
      style="-fx-background-color: #f9f9f9;">

    <!-- Caixa central para o conteúdo principal -->
    <VBox alignment="CENTER" layoutX="100.0" layoutY="70.0" prefWidth="400.0" spacing="20"
          style="-fx-background-color: #ffffff; -fx-border-radius: 15px; -fx-background-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 5); -fx-padding: 20;">

        <!-- Título -->
        <Label text="Pagamento Pendente"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-font-family: 'Roboto', sans-serif; -fx-text-fill: #333333;" />

        <!-- Mensagem de instrução -->
        <Label text="Finalize o pagamento para continuar utilizando nossos serviços."
               style="-fx-font-size: 14px; -fx-font-family: 'Roboto', sans-serif; -fx-text-fill: #666666; -fx-text-alignment: center;" wrapText="true" />

        <!-- Valor do pagamento -->
        <Label text="Total a pagar: R$ 150,00"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-family: 'Roboto', sans-serif; -fx-text-fill: #0078d7;" />

        <!-- Botões de ação -->
        <HBox alignment="CENTER" spacing="15">
            <!-- Botão para pagar agora -->
            <Button text="Pagar Agora" onAction="#handlePayNow"
                    style="-fx-background-color: linear-gradient(to right, #42a5f5, #1e88e5); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-family: 'Roboto', sans-serif; -fx-background-radius: 10px; -fx-padding: 5 15;" />

            <!-- Botão para cancelar -->
            <Button text="Cancelar" onAction="#handleCancel"
                    style="-fx-background-color: #cccccc; -fx-text-fill: #333333; -fx-font-size: 14px; -fx-font-family: 'Roboto', sans-serif; -fx-background-radius: 10px; -fx-padding: 5 15;" />
        </HBox>
    </VBox>
</Pane>