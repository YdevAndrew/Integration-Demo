<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane fx:id="mainContent" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.jala.university.presentation.controller.External.ScreenNoPaymentSchedule"
      prefWidth="800.0" prefHeight="600.0">

    <!-- Caixa central para a mensagem -->
    <VBox alignment="CENTER" layoutX="200.0" layoutY="100.0" prefWidth="400.0" spacing="20"
          style="-fx-background-color: #ffffff; -fx-border-radius: 15px; -fx-background-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 5); -fx-padding: 20;">
        <!-- Mensagem -->
        <Label style="-fx-font-size: 18px; -fx-font-family: 'Roboto', sans-serif; -fx-text-fill: #333333; -fx-text-alignment: center;"
               text="You don't have any payments scheduled." wrapText="true" />
    </VBox>

    <!-- Botão para agendar pagamento -->
    <Button layoutX="290.0" layoutY="350.0" onAction="#handleSchedulePayment" prefHeight="40.0" prefWidth="220.0"
            style="-fx-background-color: linear-gradient(to right, #42a5f5, #1e88e5); -fx-text-fill: #ffffff; -fx-font-family: 'Roboto', sans-serif; -fx-font-size: 16px; -fx-background-radius: 20px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 5); -fx-cursor: hand;"
            text="Schedule a payment" />

    <!-- Botão para navegar para pagamentos pendentes -->
    <Button layoutX="290.0" layoutY="420.0" onAction="#handlePendingPayment" prefHeight="40.0" prefWidth="220.0"
            style="-fx-background-color: linear-gradient(to right, #ff9800, #f57c00); -fx-text-fill: #ffffff; -fx-font-family: 'Roboto', sans-serif; -fx-font-size: 16px; -fx-background-radius: 20px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 5); -fx-cursor: hand;"
            text="View Pending Payments" />
</Pane>
