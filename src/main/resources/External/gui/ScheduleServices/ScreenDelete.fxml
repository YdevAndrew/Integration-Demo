<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.jala.university.presentation.controller.External.ScreenConfirmAndDeleteController"
            prefHeight="200.0" prefWidth="400.0">

    <!-- Caixa de texto para confirmação -->
    <VBox spacing="20" alignment="CENTER" layoutX="50" layoutY="50" prefWidth="300.0">
        <Label text="Tem certeza que deseja excluir este serviço?"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

        <!-- Botões de Confirmação e Cancelamento -->
        <HBox spacing="20" alignment="CENTER">
            <Button text="Confirmar" onAction="#handleConfirm" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"/>
            <Button text="Cancelar" onAction="#handleCancel" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px;"/>
        </HBox>
    </VBox>

</AnchorPane>