<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="loadingBox" alignment="CENTER" prefHeight="190.0" prefWidth="200.0" spacing="10.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <ImageView fitHeight="71.0" fitWidth="98.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/img/Logo.png" />
         </image>
      </ImageView>
        <Label styleClass="label-heading" text="Loading..." />
      <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" />
      <Button fx:id="cancelButton" mnemonicParsing="false" styleClass="Button-good" text="Cancel" />
    </children>
    <stylesheets>
        <URL value="@Assets/style.css" />
    </stylesheets>
</VBox>
